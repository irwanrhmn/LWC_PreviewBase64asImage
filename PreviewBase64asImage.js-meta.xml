<!--

Author : Irwan Rahman Sunarto
Description : JavaScript file for previewing image file under Salesforce record by reading it from Base64

-->

<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata" fqn="LWC_PreviewBase64asImage">
    <apiVersion>60.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>    
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="base64files" type="string[]" label="Base64 Value"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
